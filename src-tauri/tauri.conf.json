{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "go-abacus",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": true,
        "scope": [
          {
            "name": "explorer",
            "cmd": "explorer",
            "args": [
              "*"
            ]
          },
          {
            "name": "open",
            "cmd": "open",
            "args": [
              "*"
            ]
          }
        ]
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": [
          "$RESOURCE/data/*",
          "$RESOURCE/data"
        ]
      }
    },
    "windows": [
      {
        "title": "go-abacus v0.1.0",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.go-abacus.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}