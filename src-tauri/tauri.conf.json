{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
    "beforeBuildCommand": "bun run build",
    "beforeDevCommand": "bun run dev",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "go-abacus",
    "version": "0.1.3"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "open": true,
        "save": true
      },
      "fs": {
        "all": true,
        "scope": [
          "**",
          "**/*",
          "/**/*"
        ]
      },
      "path": {
        "all": true
      },
      "shell": {
        "all": true,
        "scope": [
          {
            "args": [
              "*"
            ],
            "cmd": "explorer",
            "name": "explorer"
          },
          {
            "args": [
              "*"
            ],
            "cmd": "open",
            "name": "open"
          }
        ]
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.go-abacus.app",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "height": 600,
        "title": "go-abacus v0.1.3",
        "width": 900
      }
    ]
  }
}